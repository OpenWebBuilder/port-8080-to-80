---
- name: install iptables
  apt:
    pkg:
    - iptables
  become: true

- name: 'Forward port 80 to {{ tomcat_port }}'
  iptables:
    table: nat
    chain: PREROUTING
    protocol: tcp
    match: tcp
    destination_port: '80'
    jump: REDIRECT
    to_ports: '{{ tomcat_port }}'
    comment: 'Redirect web traffic to port {{ tomcat_port }}'
  become: yes
  notify: restart Tomcat
