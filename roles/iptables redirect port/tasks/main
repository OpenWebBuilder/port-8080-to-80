---
- name: install iptables
  apt:
    pkg:
    - iptables
  become: true

- name: 'Forward port 80 to {{ to_port }}'
  iptables:
    table: nat
    chain: PREROUTING
    protocol: tcp
    match: tcp
    destination_port: '{{ from_port }}'
    jump: REDIRECT
    to_ports: '{{ to_port }}'
    comment: 'Redirect web traffic to port {{ to_port }}'
  become: yes
  notify: restart Tomcat
